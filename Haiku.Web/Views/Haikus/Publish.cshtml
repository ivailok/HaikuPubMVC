@model Haiku.Web.ViewModels.PublishViewModel

@{
    ViewBag.Title = "Publish";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    @Styles.Render("~/Content/expanding-textarea.min.css")
}

<br />

@Html.ValidationMessage("GeneralError", new { @class = "text-danger" })

<br />

@using (Html.BeginForm("Publish", "Haikus", FormMethod.Post, new { id = "authentication-form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new { @id = "expanding-textarea", @class = "form-control", @focus = "focus" })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Publish" class="btn btn-primary" id="submit-button" />
            </div>
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/lockButton.js")
    @Scripts.Render("~/Scripts/autoHeight.js")
}

